# Copy to application-dev.yml or set as env vars (prefer MONGODB_URI env var for Atlas to avoid committing credentials)
spring:
  data:
    mongodb:
      # Local: mongodb://localhost:27017/rcview
      # Atlas: mongodb+srv://USER:PASSWORD@cluster.xxxxx.mongodb.net/rcview?retryWrites=true&w=majority&appName=ciView
      uri: ${MONGODB_URI:mongodb://localhost:27017/rcview}
  security:
    oauth2:
      client:
        registration:
          google:
            client-id: YOUR_GOOGLE_CLIENT_ID
            client-secret: YOUR_GOOGLE_CLIENT_SECRET

vahan:
  api:
    api-key: YOUR_VAHAN_API_KEY

app:
  jwt:
    secret: your-min-32-char-secret-for-jwt-signing
  frontend-url: http://localhost:3000
